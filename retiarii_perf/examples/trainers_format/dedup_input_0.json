{
    "graph": {
        "inputs": [ [ { "name": "image" } ] ],
        "outputs": [ [ { "name": "out" } ] ],

        "hidden_nodes": [
            { "name": "broadcast", "operation": { "type": "broadcast", "src": 0 } },
            { "name": "op1", "operation": { "type": "identity" } },
            { "name": "op2", "operation": { "type": "identity" } },
            { "name": "op3", "operation": { "type": "identity" } }
        ],

        "edges": [
            { "head": "image", "tail": "broadcast" },
            { "head": "image", "tail": "op1" },
            { "head": "op1", "tail": "op2" },
            { "head": "op2", "tail": "op3" },
            { "head": "op3", "tail": "out" }
        ]
    },
    "training_config": [
        {
            "train_loader": "mnist",
            "optimizer": "adam",
            "training_step": "classif",
            "valid_loader": "mnist"
        }
    ],
    "all_train_loaders": {
        "mnist": {
            "__func__": "train_loaders.mnist_dataloader",
            "kwargs": {
                "image_size": [28, 28],
                "batch_size": 32,
                "augmentation": true
            }
        }
    },
    "all_valid_loaders": {
        "mnist": {
            "__func__": "train_loaders.mnist_dataloader",
            "kwargs": {
                "validation": true,
                "image_size": [28, 28],
                "batch_size": 512
            }
        }
    },
    "all_optimizers": {
        "adam": {
            "__class__": "Adam",
            "kwargs": {
                "lr": 0.001
            }
        }
    },
    "all_training_steps": {
        "classif": "training_steps.typical_classifier"
    },
    "all_validation_steps": {
        "classif": "training_steps.typical_classifier"
    }
}
